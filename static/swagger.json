{
    "openapi": "3.0.0",
    "info": {
      "title": "Test Application",
      "version": "1.0.0",
      "description": "API documentation for the Test Application."
    },
    "servers": [
      {
        "url": "http://localhost:3000",
        "description": "Local server"
      }
    ],
    "paths": {
      "/api/v1/analysis/": {
        "get": {
          "summary": "Analyze Image",
          "description": "Analyze an image by providing its URI and get the extracted text.",
          "operationId": "analyzeImage",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "uri": {
                      "type": "string",
                      "description": "The URI of the image to be analyzed.",
                      "example": "https://example.com/image.jpg"
                    }
                  },
                  "required": ["uri"]
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Successful response with extracted text.",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "text": {
                        "type": "string",
                        "description": "The extracted text from the image."
                      }
                    }
                  },
                  "example": {
                    "text": "Extracted text from the image"
                  }
                }
              }
            },
            "400": {
              "description": "Bad Request. Missing URI in the JSON body.",
              "content": {
                "application/json": {
                  "example": {
                    "error": "Missing URI in JSON"
                  }
                }
              }
            },
            "500": {
              "description": "Internal Server Error. Error occurred during processing.",
              "content": {
                "application/json": {
                  "example": {
                    "error": "Error in processing"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
  